function calculateGrade() {

  var homework = 0
  var quiz = 0
  var project1 = 0
  var project2 = 0


  var homework_percent = parseInt(document.getElementById ("homework-percent").innerHTML)

  var homework_grade = parseFloat(document.getElementById ("homework-grade").value)

  homework = homework_percent * homework_grade/100

  var quiz_percent = parseInt(document.getElementById ("quiz-percent").innerHTML)

  var quiz_grade = parseFloat(document.getElementById ("quiz-grade").value)

  quiz = quiz_percent * quiz_grade/100

  var project1_percent = parseInt(document.getElementById ("project1-percent").innerHTML)

  var project1_grade = parseFloat(document.getElementById ("project1-grade").value)

  project1 = project1_percent * project1_grade/100

  var project2_percent = parseInt(document.getElementById ("project2-percent").innerHTML)

  var project2_grade = parseFloat(document.getElementById ("project2-grade").value)

  project2 = project2_percent * project2_grade/100

  var currentGrade = homework + quiz + project1 + project2
  console.log(currentGrade)

  document.getElementbyId("currentGrade")
}
